{
  "name": "mathink",
  "private": true,
  "version": "1.5.4",
  "description": "MathInk Desktop Application",
  "type": "module",
  "main": "electron/main.cjs",
  "author": "Subhadeep Choudhury",
  "homepage": "./",
  "scripts": {
    "preinstall": "node scripts/install-offline.mjs",
    "postinstall": "node scripts/postinstall-models.mjs",
    "dev": "vite",
    "start": "vite",
    "build": "vite build",
    "build:dev": "vite build --mode development",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:8080 && electron .\"",
    "electron:build": "node scripts/update-terms-effective-date.mjs && vite build && electron-builder",
    "electron:build:win": "node scripts/update-terms-effective-date.mjs && vite build && electron-builder --win --x64",
    "install:offline": "node scripts/install-offline.mjs",
    "test:screenshot-parser": "node scripts/test-screenshot-parser.mjs",
    "test": "vitest run"
  },
  "dependencies": {
    "@electric-sql/pglite": "^0.3.14",
    "@hookform/resolvers": "^3.10.0",
    "@huggingface/transformers": "^3.8.1",
    "@radix-ui/colors": "^3.0.0",
    "@radix-ui/react-accordion": "^1.2.11",
    "@radix-ui/react-alert-dialog": "^1.1.15",
    "@radix-ui/react-aspect-ratio": "^1.1.7",
    "@radix-ui/react-avatar": "^1.1.10",
    "@radix-ui/react-checkbox": "^1.3.2",
    "@radix-ui/react-collapsible": "^1.1.11",
    "@radix-ui/react-context-menu": "^2.2.15",
    "@radix-ui/react-dialog": "^1.1.14",
    "@radix-ui/react-dropdown-menu": "^2.1.15",
    "@radix-ui/react-hover-card": "^1.1.14",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-menubar": "^1.1.15",
    "@radix-ui/react-navigation-menu": "^1.2.13",
    "@radix-ui/react-popover": "^1.1.14",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-radio-group": "^1.3.7",
    "@radix-ui/react-scroll-area": "^1.2.9",
    "@radix-ui/react-select": "^2.2.5",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slider": "^1.3.5",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.5",
    "@radix-ui/react-tabs": "^1.1.12",
    "@radix-ui/react-toast": "^1.2.14",
    "@radix-ui/react-toggle": "^1.1.9",
    "@radix-ui/react-toggle-group": "^1.1.10",
    "@radix-ui/react-tooltip": "^1.2.8",
    "@tanstack/react-query": "^5.83.0",
    "@tiptap/extension-image": "^3.10.7",
    "@tiptap/extension-subscript": "^3.10.7",
    "@tiptap/extension-superscript": "^3.10.7",
    "@tiptap/extension-text-align": "^3.10.7",
    "@tiptap/extension-underline": "^3.10.7",
    "@tiptap/react": "^3.10.7",
    "@tiptap/starter-kit": "^3.10.7",
    "@types/katex": "^0.16.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.1.1",
    "d3-path": "^3.1.0",
    "date-fns": "^3.6.0",
    "dexie": "^4.2.1",
    "dexie-react-hooks": "^4.2.0",
    "embla-carousel-react": "^8.6.0",
    "input-otp": "^1.4.2",
    "jspdf": "^4.0.0",
    "katex": "^0.16.25",
    "lucide-react": "^0.462.0",
    "mathlive": "^0.108.2",
    "music-metadata-browser": "2.5.11",
    "next-themes": "^0.3.0",
    "react": "^18.3.1",
    "react-day-picker": "^8.10.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.61.1",
    "react-markdown": "^10.1.0",
    "react-resizable-panels": "^2.1.9",
    "react-router-dom": "^6.30.1",
    "recharts": "^2.15.4",
    "rehype-katex": "^7.0.1",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "sonner": "^1.7.4",
    "tailwind-merge": "^2.6.0",
    "tailwindcss-animate": "^1.0.7",
    "tesseract.js": "^5.1.0",
    "uuid": "^13.0.0",
    "vaul": "^0.9.9",
    "workbox-window": "^7.3.0",
    "zod": "^3.25.76",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "^22.16.5",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react-swc": "^3.11.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.1.2",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "eslint": "^9.32.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^15.15.0",
    "lovable-tagger": "^1.1.11",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0",
    "vite": "^7.2.4",
    "vitest": "^4.0.17",
    "wait-on": "^8.0.2"
  },
  "overrides": {
    "tar": "6.2.1"
  },
  "build": {
    "appId": "com.subhadeep.mathink",
    "productName": "MathInk",
    "artifactName": "MathInk Setup-${version}.${ext}",
    "directories": {
      "output": "dist",
      "buildResources": "build-resources"
    },
    "asarUnpack": [
      "app-dist/vendor/ocr/**"
    ],
    "files": [
      "app-dist/**/*",
      "electron/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "build/icon.ico",
        "to": "icon.ico"
      },
      {
        "from": "embedding_data",
        "to": "embedding"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": true,
      "shortcutName": "MathInk Desktop",
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "license": "build/terms-and-conditions.txt"
    }
  }
}
